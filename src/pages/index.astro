---
import Header from "../components/Header.astro";
import Event from "../components/Event.astro";
import Involved from "../components/Involved.astro";
import SocialMedia from "../components/SocialMedia.astro";
import Content from "../components/Content.astro";
import Countdown from "../components/Countdown.astro";
import NewHere from "../components/NewHere.astro";
import Footer from "../components/Footer.astro";
import Bottom from "../components/Bottom.astro";
import SidebarButtonsContainer from "../components/SidebarButtonsContainer.astro";
import Modal from "../components/Modal.astro";
import "../styles/global.css";
import "../styles/style.css";
import "../styles/sidebar-buttons.css";

let isOpen = false;

function handleClose() {
  isOpen = false;
}

function handleOpen() {
  isOpen = true;
}
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>
      Iglesia Cristiana Asambleas de Dios | Manizales Caldas - Chipre
    </title>
    <meta
      name="description"
      content="Página oficial de la Iglesia Cristiana, Asambleas de Dios en Manizales, Caldas - Chipre. Conéctate con nuestros eventos, actividades y conoce más sobre nuestra congregación."
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
  </head>
  <body class="bg-gray-900 text-white">
    <Header />
    <SidebarButtonsContainer />
    <main
      class="w-full p-4 bg-gradient-to-t from-gray-900 via-gray-800 to-gray-700"
    >
      <div class="flex flex-col lg:flex-row lg:space-x-6 w-full px-2 py-4">
        <div class="lg:w-1/3 mb-6 lg:mb-0">
          <Countdown />
        </div>
        <div class="lg:w-2/3">
          <Event />
        </div>
      </div>
      <div class="w-full px-2 py-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
          <NewHere />
          <SocialMedia />
          <Involved />
          <Content />
        </div>
      </div>
    </main>
    <Footer />
    <Modal open={isOpen} onClose={handleClose} imgSrc="/img/SantaCena.webp" />
    <Bottom />
  </body>
</html>

<script src="../js/index.js"></script>
