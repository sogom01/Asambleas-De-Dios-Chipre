---
import "../styles/components/header.css";
import Schedule from "./Schedule.astro";
---

<header class="header bg-gradient-to-b from-gray-900 via-gray-800 to-gray-700">
  <nav
    class="container mx-auto flex flex-wrap items-center justify-around px-4"
  >
    <!-- Navegación - solo visible en escritorio -->
    <div
      class="nav-links md:flex w-full md:w-auto justify-start md:justify-between order-1 md:order-1 mb-2"
    >
      <ul class="flex space-x-10 text-lg font-normal">
        <li>
          <a
            href="/"
            class="relative hover:text-yellow-500 transition duration-300"
            >Inicio</a
          >
        </li>
        <li>
          <a
            href="/about"
            class="relative hover:text-yellow-500 transition duration-300"
            >Nosotros</a
          >
        </li>
        <li>
          <a
            href="/events"
            class="relative hover:text-yellow-500 transition duration-300"
            >Eventos</a
          >
        </li>
        <li>
          <a
            href="/sermons"
            class="relative hover:text-yellow-500 transition duration-300"
            >Prédicas</a
          >
        </li>
        <li>
          <button
            id="scheduleButton"
            class="relative hover:text-yellow-500 transition duration-300"
            >Horarios</button
          >
        </li>
        <li>
          <a
            href="/wallpapers"
            class="relative hover:text-yellow-500 transition duration-300"
            >Fondos</a
          >
        </li>
      </ul>
    </div>
    <!-- Logo centrado en móviles y a la derecha en escritorio -->
    <div
      class="w-full md:w-auto flex justify-center md: order-1 md:order-2 bg-transparent logo mb-4"
    >
      <a
        href="/"
        aria-label="Página principal"
        class="flex justify-center h-30 w-full md:h-36"
      >
        <img
          src="/logo.webp"
          alt="Logo de la Iglesia"
          class="h-28 md:h-32 w-auto"
          loading="lazy"
        />
      </a>
    </div>
  </nav>
  <!-- Segunda barra de navegación solo para pantallas pequeñas con iconos y menú hamburguesa -->
  <div
    class="md:hidden bg-transparent w-full left-0 right-0 top-12 z-50 mobile-nav"
  >
    <nav class="text-center p-4 flex items-center justify-between">
      <!-- Botón de menú hamburguesa solo en móvil -->
      <div class="absolute left-6">
        <button
          id="mobile-menu-button"
          class="text-white focus:outline-none menu-button"
          aria-label="Abrir menú móvil"
        >
          <svg
            class="w-8 h-8"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
      <div class="flex justify-center space-x-8 w-full">
        <a
          href="/events"
          class="text-white hover:text-yellow-500 transition duration-300 mx-2 inline-flex flex-col items-center text-xs"
          aria-label="Eventos"
        >
          <i class="fas fa-calendar-alt text-2xl"></i> Eventos
        </a>
        <a
          href="/about"
          class="text-white hover:text-yellow-500 transition duration-300 mx-2 inline-flex flex-col items-center text-xs"
          aria-label="Nosotros"
        >
          <i class="fas fa-users text-2xl"></i> Nosotros
        </a>
        <a
          href="/sermons"
          class="text-white hover:text-yellow-500 transition duration-300 mx-2 inline-flex flex-col items-center text-xs"
          aria-label="Prédicas"
        >
          <i class="fas fa-bible text-2xl"></i> Prédicas
        </a>
      </div>
    </nav>
  </div>
  <!-- Menú móvil lateral -->
  <div
    id="mobile-menu"
    class="fixed inset-y-0 left-0 w-6/12 bg-gradient-to-r from-gray-900 via-gray-800 to-gray-700 bg-opacity-90 hidden z-50"
  >
    <div class="flex flex-col h-full">
      <div class="flex justify-end p-4">
        <button
          id="close-menu-button"
          class="text-white focus:outline-none"
          aria-label="Cerrar menú móvil"
        >
          <svg
            class="w-8 h-8"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <ul class="space-y-6 text-center font-medium mt-8 px-10">
        <li>
          <a
            href="/"
            class="block text-white hover:text-yellow-500 transition duration-300"
            >Inicio</a
          >
        </li>
        <li>
          <a
            href="/about"
            class="block text-white hover:text-yellow-500 transition duration-300"
            >Nosotros</a
          >
        </li>
        <li>
          <a
            href="/events"
            class="block text-white hover:text-yellow-500 transition duration-300"
            >Eventos</a
          >
        </li>
        <li>
          <a
            href="/sermons"
            class="block text-white hover:text-yellow-500 transition duration-300"
            >Prédicas</a
          >
        </li>
        <li>
          <button
            id="scheduleButtonMobile"
            class="relative hover:text-yellow-500 transition duration-300"
            >Horarios</button
          >
        </li>
        <li>
          <a
            href="/wallpapers"
            class="block text-white hover:text-yellow-500 transition duration-300"
            >Fondos</a
          >
        </li>
      </ul>
    </div>
  </div>

  <!-- Modal -->
  <Schedule />
</header>

<script src="../js/header.js"></script>
