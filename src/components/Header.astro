<header class="bg-black text-white py-0 relative">
  <nav class="container mx-auto flex justify-between items-center px-4">
    <div class="md:hidden">
      <button
        id="mobile-menu-button"
        class="text-white focus:outline-none"
        aria-label="Abrir menú móvil"
      >
        <svg
          class="w-6 h-6"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    <div class="flex-1 md:flex-none flex justify-center md:justify-start">
      <a href="/">
        <img
          src="/logo-white.png"
          alt="Logo de la Iglesia"
          class="h-24 w-auto"
          loading="lazy"
        />
      </a>
    </div>
    <ul class="hidden md:flex space-x-8 text-lg font-light">
      <li>
        <a
          href="/"
          class="relative hover:text-yellow-600 transition duration-300"
          >Inicio</a
        >
      </li>
      <li>
        <a
          href="/about"
          class="relative hover:text-yellow-600 transition duration-300"
          >Nosotros</a
        >
      </li>
      <li>
        <a
          href="/ministries"
          class="relative hover:text-yellow-600 transition duration-300"
          >Ministerios</a
        >
      </li>
      <li>
        <a
          href="/prayer"
          class="relative hover:text-yellow-600 transition duration-300"
          >Peticiones de Oración</a
        >
      </li>
    </ul>
  </nav>
  <!-- Segunda barra de navegación solo para pantallas pequeñas con iconos -->
  <div class="md:hidden bg-black w-full px-4 left-0 right-0 top-24 z-50">
    <nav class="text-center py-2 flex justify-center space-x-4">
      <a
        href="/events"
        class="text-white hover:text-yellow-600 transition duration-300 mx-2 inline-flex flex-col items-center text-xs"
      >
        <svg
          class="w-6 h-6 mb-1"
          fill="currentColor"
          viewBox="0 0 20 20"
          aria-hidden="true"
        >
          <path
            d="M6 2a1 1 0 000 2h8a1 1 0 000-2H6zM5 5a1 1 0 00-1 1v1H3a1 1 0 000 2h14a1 1 0 100-2h-1V6a1 1 0 00-1-1H5zm2 4a1 1 0 011 1v6a1 1 0 102 0V10a1 1 0 012 0v6a1 1 0 102 0v-6a1 1 0 012 0v6a1 1 0 102 0v-6a1 1 0 011-1H7z"
          ></path>
        </svg>
        Eventos
      </a>
      <a
        href="/about"
        class="text-white hover:text-yellow-600 transition duration-300 mx-2 inline-flex flex-col items-center text-xs"
      >
        <svg
          class="w-6 h-6 mb-1"
          fill="currentColor"
          viewBox="0 0 20 20"
          aria-hidden="true"
        >
          <path
            d="M10 2a1 1 0 00-.89.55L7.59 5H3.5A1.5 1.5 0 002 6.5v7a1.5 1.5 0 001.5 1.5h3v1a1 1 0 102 0v-1h2v1a1 1 0 102 0v-1h3A1.5 1.5 0 0018 13.5v-7A1.5 1.5 0 0016.5 5h-4.09l-1.52-2.45A1 1 0 0010 2zm0 3.5L11.48 7h-2.96L10 5.5zM4 8h12v5.5a.5.5 0 01-.5.5h-11a.5.5 0 01-.5-.5V8zm4 7h4v1H8v-1z"
          ></path>
        </svg>
        Nosotros
      </a>
      <a
        href="/sermons"
        class="text-white hover:text-yellow-600 transition duration-300 mx-2 inline-flex flex-col items-center text-xs"
      >
        <svg
          class="w-6 h-6 mb-1"
          fill="currentColor"
          viewBox="0 0 24 24"
          aria-hidden="true"
        >
          <path
            d="M12 2.5A9.5 9.5 0 002.5 12 9.5 9.5 0 0012 21.5 9.5 9.5 0 0021.5 12 9.5 9.5 0 0012 2.5zm3.8 10.7l-5.3 3a1 1 0 01-1.5-.9V9.7a1 1 0 011.5-.9l5.3 3a1 1 0 010 1.8z"
          ></path>
        </svg>
        Predicas
      </a>
    </nav>
  </div>
  <div
    id="mobile-menu"
    class="fixed inset-0 bg-black bg-opacity-100 hidden z-50"
  >
    <div class="container mx-auto px-4 py-8">
      <div class="flex justify-start">
        <button
          id="close-menu-button"
          class="text-white focus:outline-none"
          aria-label="Cerrar menú móvil"
        >
          <svg
            class="w-6 h-6"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <ul class="space-y-4 text-center font-light">
        <li>
          <a
            href="/"
            class="block text-white hover:text-yellow-600 transition duration-300"
            >Inicio</a
          >
        </li>
        <li>
          <a
            href="/about"
            class="block text-white hover:text-yellow-600 transition duration-300"
            >Nosotros</a
          >
        </li>
        <li>
          <a
            href="/ministries"
            class="block text-white hover:text-yellow-600 transition duration-300"
            >Ministerios</a
          >
        </li>
        <li>
          <a
            href="/prayer"
            class="block text-white hover:text-yellow-600 transition duration-300"
            >Peticiones de Oración</a
          >
        </li>
      </ul>
    </div>
  </div>
</header>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const menuButton = document.getElementById("mobile-menu-button");
    const closeMenuButton = document.getElementById("close-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    menuButton.addEventListener("click", function () {
      mobileMenu.classList.toggle("hidden");
    });

    closeMenuButton.addEventListener("click", function () {
      mobileMenu.classList.toggle("hidden");
    });
  });
</script>
