<header
  class="header bg-gradient-to-b from-gray-900 via-gray-800 to-gray-700 text-white"
>
  <nav class="container flex flex-wrap items-center">
    <!-- Logo centrado en móviles y a la izquierda en escritorio -->
    <div
      class="w-full md:w-2/5 flex justify-center md:justify-start order-1 md:order-2 bg-transparent py-2 md:py-0 logo"
    >
      <a
        href="/"
        aria-label="Página principal"
        class="flex items-center justify-center h-28 w-full md:h-40"
      >
        <img
          src="/logo.png"
          alt="Logo de la Iglesia"
          class="h-28 md:h-32 w-auto"
          loading="lazy"
        />
      </a>
    </div>
    <!-- Navegación - solo visible en escritorio -->
    <div
      class="w-full md:w-3/5 hidden md:flex justify-center md:justify-around order-2 md:order-1 md:rounded-r-lg md:py-4 nav-links"
    >
      <ul class="flex space-x-6 text-lg font-medium">
        <li>
          <a
            href="/"
            class="relative hover:text-yellow-500 transition duration-300"
            >Inicio</a
          >
        </li>
        <li>
          <a
            href="/about"
            class="relative hover:text-yellow-500 transition duration-300"
            >Nosotros</a
          >
        </li>
        <li>
          <a
            href="/event"
            class="relative hover:text-yellow-500 transition duration-300"
            >Eventos</a
          >
        </li>
      </ul>
    </div>
  </nav>
  <!-- Segunda barra de navegación solo para pantallas pequeñas con iconos y menú hamburguesa -->
  <div
    class="md:hidden bg-transparent w-full px-4 left-0 right-0 top-12 z-50 mobile-nav"
  >
    <nav class="text-center py-2 flex items-center relative">
      <!-- Botón de menú hamburguesa solo en móvil -->
      <div class="absolute left-2">
        <button
          id="mobile-menu-button"
          class="text-white focus:outline-none menu-button"
          aria-label="Abrir menú móvil"
        >
          <svg
            class="w-8 h-8"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"></path>
          </svg>
        </button>
      </div>
      <div class="flex justify-center space-x-8 w-full">
        <a
          href="/events"
          class="text-white hover:text-yellow-500 transition duration-300 mx-2 inline-flex flex-col items-center text-xs"
          aria-label="Eventos"
        >
          <i class="fas fa-calendar-alt text-2xl"></i>
          Eventos
        </a>
        <a
          href="/about"
          class="text-white hover:text-yellow-500 transition duration-300 mx-2 inline-flex flex-col items-center text-xs"
          aria-label="Nosotros"
        >
          <i class="fas fa-users text-2xl"></i>
          Nosotros
        </a>
        <a
          href="/sermons"
          class="text-white hover:text-yellow-500 transition duration-300 mx-2 inline-flex flex-col items-center text-xs"
          aria-label="Predicas"
        >
          <i class="fas fa-bible text-2xl"></i>
          Predicas
        </a>
      </div>
    </nav>
  </div>
  <!-- Menú móvil lateral -->
  <div
    id="mobile-menu"
    class="fixed inset-y-0 left-0 w-7/12 bg-gradient-to-r from-gray-900 via-gray-800 to-gray-700 bg-opacity-90 hidden z-50"
  >
    <div class="flex flex-col h-full">
      <div class="flex justify-end p-4">
        <button
          id="close-menu-button"
          class="text-white focus:outline-none"
          aria-label="Cerrar menú móvil"
        >
          <svg
            class="w-8 h-8"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
      <ul class="space-y-6 text-center font-medium mt-8 px-4">
        <li>
          <a
            href="/"
            class="block text-white hover:text-yellow-500 transition duration-300"
            >Inicio</a
          >
        </li>
        <li>
          <a
            href="/about"
            class="block text-white hover:text-yellow-500 transition duration-300"
            >Nosotros</a
          >
        </li>
        <li>
          <a
            href="/ministries"
            class="block text-white hover:text-yellow-500 transition duration-300"
            >Ministerios</a
          >
        </li>
        <li>
          <a
            href="/prayer"
            class="block text-white hover:text-yellow-500 transition duration-300"
            >Peticiones de Oración</a
          >
        </li>
      </ul>
    </div>
  </div>
</header>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const menuButton = document.getElementById("mobile-menu-button");
    const closeMenuButton = document.getElementById("close-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    menuButton.addEventListener("click", function () {
      mobileMenu.classList.toggle("hidden");
    });

    closeMenuButton.addEventListener("click", function () {
      mobileMenu.classList.toggle("hidden");
    });
  });
</script>
