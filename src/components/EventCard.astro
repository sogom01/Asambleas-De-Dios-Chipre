---
const { image, title, date, link } = Astro.props;
---

<style>
  .event-card {
    perspective: 1000px;
  }

  .event-card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    transition: transform 0.6s;
    transform-style: preserve-3d;
  }

  .event-card:hover .event-card-inner {
    transform: rotateY(180deg);
  }

  .event-card-front,
  .event-card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    border-radius: 0.375rem;
    overflow: hidden;
  }

  .event-card-front {
    background-color: #2d3748;
  }

  .event-card-back {
    background-color: #2d3748;
    color: white;
    transform: rotateY(180deg);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 1rem;
  }

  .event-card img {
    width: 100%;
    height: auto;
    display: block;
  }

  .event-card a {
    display: block;
    width: 100%;
    height: 100%;
    text-decoration: none;
    color: inherit;
  }
</style>

<div class="event-card max-w-sm mx-auto">
  <a href={link} class="event-card-inner">
    <div class="event-card-front">
      <img src={image} alt={title} />
    </div>
    <div class="event-card-back">
      <div class="font-bold text-xl mb-2">{title}</div>
      <p class="text-gray-400 text-base">{date}</p>
    </div>
  </a>
</div>
