---
import "../styles/sidebar-buttons.css"; // Si necesitas estilos específicos
---

<div class="relative group">
  <a
    id="address-button"
    href="https://www.google.com/maps?q=Iglesia+Cristiana+Chipre+Asambleas+De+Dios,+Manizales+Caldas"
    target="_blank"
    rel="noopener noreferrer"
    class="sidebar-button flex items-center p-3 rounded-l-full shadow-lg transition-all duration-300 bg-gradient-to-r from-gray-900 via-gray-800 to-gray-700 text-white"
  >
    <i class="fas fa-map-marker-alt text-2xl"></i>
    <span
      class="ml-2 opacity-0 group-hover:opacity-100 transition duration-300 whitespace-nowrap"
    >
      Dirección
    </span>
  </a>
</div>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const addressButton = document.getElementById("address-button");

    function resetButton() {
      addressButton.classList.remove("expanded");
    }

    addressButton.addEventListener("click", function () {
      setTimeout(() => {
        addressButton.style.pointerEvents = "none";
        setTimeout(() => {
          addressButton.style.pointerEvents = "auto";
          resetButton();
        }, 300);
      }, 100);
    });

    addressButton.addEventListener("mouseover", function () {
      addressButton.classList.add("expanded");
    });

    addressButton.addEventListener("mouseout", function () {
      if (!addressButton.matches(":hover")) {
        resetButton();
      }
    });

    document.addEventListener("visibilitychange", function () {
      if (document.visibilityState === "visible") {
        resetButton();
      }
    });
  });
</script>
