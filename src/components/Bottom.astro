<style>
  @keyframes bounceOpacity {
    0%,
    100% {
      transform: translateY(0);
      opacity: 1;
    }
    50% {
      transform: translateY(-7px);
      opacity: 0.8;
    }
  }

  .animate-bounce-opacity {
    animation: bounceOpacity 1.5s infinite;
  }

  .modal-content video {
    width: 100%;
  }
